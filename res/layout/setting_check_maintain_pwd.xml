<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/setting_checkpwd_root_layout"
        android:layout_width="280dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/shape_password_dialog_bg"
            android:orientation="vertical"
            android:layout_width="280dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/setting_please_input_maintain_pwd"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/setting_checkpwd_edit"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:background="@drawable/amount_edittext_selector"
                android:layout_width="200dp"
                android:layout_height="35dp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_password_dialog_bg_bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:id="@+id/setting_checkpwd_cancel"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/shape_password_cancel_bg"
                android:text="@string/setting_cancel"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/setting_checkpwd_confirm"
                android:background="@drawable/shape_password_confirm_bg"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/setting_confirm"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>