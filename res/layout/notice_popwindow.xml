<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Button
        android:id="@+id/pop_window_reprint"
        android:text="@string/pop_reprint"
        android:background="@drawable/opo_win_shape"
        android:textColor="@color/classicalblue"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/pop_window_reprint_10"
        android:text="@string/pop_reprint_10"
        android:textColor="@color/classicalblue"
        android:background="@drawable/opo_win_shape"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
</LinearLayout>
