<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_content"
    android:background="@drawable/shape_roll_pager"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:descendantFocusability="blocksDescendants">

    <com.android.aviapay.lib.stagedview.adapter.DynamicHeightTextView
        android:id="@+id/staged_item_text"
        android:layout_below="@+id/staged_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/staged_item_img"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>